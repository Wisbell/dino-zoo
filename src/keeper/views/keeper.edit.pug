extends ../../views/layout.pug

block content
  .section
    .container.is-fluid
      .columns.is-centered
        .column.is-half
          form(onsubmit='event.preventDefault();')
            .field
              label.label.has-text-white Id
              .control
                input.input(type='text' name='id' placeholder='Id #' value=`${keeper.id}` disabled)
            .field
              label.label.has-text-white First Name
              .control
                input.input(type='text' name='firstName' placeholder='First Name' value=`${keeper.firstName}`)
            .field
              label.label.has-text-white Last Name
              .control
                input.input(type='text' name='lastName' placeholder='Last Name' value=`${keeper.lastName}`)
            .field
              label.label.has-text-white Gender
              .control
                .select
                  select(id='gender')
                    if (keeper.gender === 'Male')
                      option(value='Male' selected) Male
                    else
                      option(value='Male') Male
                    if (keeper.gender === 'Female')
                      option(value='Female' selected) Female
                    else
                      option(value='Female') Female
            .field
              label.label.has-text-white Age
              .control
                if (keeper.age)
                  input.input(type='text' name='age' placeholder='Age' value=`${keeper.age}`)
                else
                  input.input(type='text' name='age' placeholder='Age')
            .field
              label.label.has-text-white Date of Hire
              .control
                if (keeper.age)
                  input.input(type='text' name='dateOfHire' placeholder='Input Date of Hire' value=`${keeper.dateOfHire}`)
                else
                  input.input(type='text' name='dateOfHire' placeholder='Input Date of Hire')
            .field
              label.label.has-text-white Speciality
              .control
                if (keeper.numberOfKills)
                  input.input(type='text' name='speciality' placeholder='Enter Speciality' value=`${keeper.speciality}`)
                else
                  input.input(type='text' name='speciality' placeholder='Enter Speciality' value='')
            .field
              label.label.has-text-white Personnel Image URL
              .control
                input.input(type='text' name='imageUrl' placeholder='Enter valid picture URL' value=`${keeper.imageUrl}`)
            .field.is-grouped
              .control
                button.button.is-link(onclick='updateKeeper()') Submit
              .control
                button.button.is-link.is-light(onclick="goTo('/personnel')") Cancel

block scripts
  script(type='text/javascript' src='/js/keeper.edit.js')