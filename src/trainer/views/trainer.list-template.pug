.column.is-one-third
  .card
    |<div class="card-image has-text-centered has-background-red">
    |  <figure class="image is-128x128 is-inline-block">
    |    <img src=#{trainer.imageUrl} alt="Placeholder image">
    |  </figure>
    |</div>
    .card-content
      .content
        div Id: #{trainer.id}
        div First Name: #{trainer.firstName}
        div Last Name: #{trainer.lastName}
        div Gender: #{trainer.gender}
        div Age: #{trainer.age}
        div Date of Hire #{trainer.dateOfHire}
        div Trick Expertise: #{trainer.trickExpertise}
    footer.card-footer
      a.card-footer-item(href=`/personnel/trainers/edit/${trainer.id}`) Edit
      a.card-footer-item(onclick=`deleteTrainer(${trainer.id})`) Delete
